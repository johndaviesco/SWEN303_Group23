mixin listingView(title, productDescription, price)
      div(class="item  col-xs-4 col-lg-4")
        div(class="thumbnail")
          img(class="group list-group-image" src="http://placehold.it/400x250/000/fff" alt="")
          div(class="caption")
          h4(class="group inner list-group-item-heading")= title
          p(class="group inner list-group-item-text")= productDescription
          div(class="row")
            div(class="col-xs-12 col-md-6")
              p(class="lead")= price
            div(class="col-xs-12 col-md-6")
              a(class="btn btn-success" href="http://www.jquery2dotnet.com") Add to cart
                block
