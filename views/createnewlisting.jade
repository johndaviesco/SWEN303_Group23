extends ../node_modules/jade-bootstrap/_bootstrap

append styles
  link(href="/stylesheets/navbar.css", rel='stylesheet').
  link(href="/stylesheets/listingview.css", rel='stylesheet').
  
block body
    .container
      +navbar("SWEN303 Marketplace", "dropdown_menu")
        ul.nav.navbar-nav
          +nav_item("/") Home
          +nav_item("/createnewlisting") Create new listing
          +nav_item("/listings") Listings
          +nav_item("/sold/1") sold
        ul.nav.navbar-nav.navbar-right
          li
            a(href="#") Sign In
    .container
      .jumbotron
        form(method="post", action="/createnewlisting")
          div(class="form-group row")
            label(class="col-md-2 control-label text-right") Category
            div(class="col-md-10")
              select(class="form-control", name="category")
                 option(value=1) Books
                 option(value=2) Computers
                 option(value=3) Home & Living
                 option(value=4) Sports
                 option(value=5) Pets & animals
          hr
          div(class="form-group row")
            label(class="col-md-2 form-control-label text-right") Title
            div(class="col-md-10")
              input(type="text", class="form-control", name="title", placeholder="Title")
          hr
          div(class="form-group row")
            label(class="col-md-2 form-control-label text-right") Description
            div(class="col-md-10")
              textarea(class="form-control", rows="3", name="description")
          hr
          div(class="form-group row")
            label(class="col-md-2 form-control-label text-right") Price
            div(class="col-md-10")
              div(class="input-group col-md-4")
                div(class="input-group-addon") $
                input(type="text", class="form-control", name="price", placeholder="Amount")
                div(class="input-group-addon") .00
          hr
          div(class="form-group row")
            label(class="col-md-2 from-control-label text-right") Image
            div(class="col-md-10")
              input(type="text", class="form-control", name="image", placeholder="ImageURL")
          hr
          div(class="form-group row")
            label(class="col-md-2 from-control-label text-right") Bank acc
            div(class="col-md-10")
              input(type="text", class="form-control", placeholder="Bank account number")
          hr
          div(class="form-group row")
            div(class="col-md-2")
            div(class="col-md-10")
              button(type="submit", class="btn btn-primary col-md-3") Create New Listing
            //a(class="btn btn-success" ng-href="http://localhost:3000/listing/1") Submit
          
